<div class="jumbotron">
  <div class="container text-center">
    <h1 class="p-5">Burger Eats</h1>
  </div>
</div>

<div class="container" id="main-body">
  <div class="row">
    <div class="col-md-6">
      <h3>On the Menu</h3>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6">
      <h3>Recent Orders</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-devoured devour=true}}
      
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="m-2 pb-5" id="orderForm">
      <form class="create-form">
        <div class="form-group text-center">
          <label for="ca">
            <h4>Create Custom Burger</h4>
          </label>
          <input type="text" id="ca" name="name">
          <button type="submit">Add Burger</button>
        </div>
      </form>
    </div>


  </div>
</div>